<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/board_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ap_board_ic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ap_board_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Model    :"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/title_id"
        app:layout_constraintStart_toEndOf="@id/ap_board_ic"
        app:layout_constraintTop_toTopOf="@id/ap_board_ic" />

    <TextView
        android:id="@+id/input_modelnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/title_model"
        app:layout_constraintTop_toTopOf="@id/title_model"
        app:layout_constraintBottom_toBottomOf="@id/title_model"/>


    <TextView
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:text="ID    :"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/ap_board_ic"
        app:layout_constraintStart_toEndOf="@id/ap_board_ic"
        app:layout_constraintTop_toBottomOf="@id/title_model" />

    <TextView
        android:id="@+id/input_idnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/title_id"
        app:layout_constraintTop_toTopOf="@id/title_id"
        app:layout_constraintBottom_toBottomOf="@id/title_id"/>

    <TextView
        android:id="@+id/title_sensorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Sensor   :"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/input_idnum_tv"
        app:layout_constraintTop_toTopOf="@id/input_idnum_tv"
        app:layout_constraintBottom_toBottomOf="@id/input_idnum_tv"/>

    <TextView
        android:id="@+id/input_sensorNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/title_sensorNum"
        app:layout_constraintTop_toTopOf="@id/title_sensorNum"
        app:layout_constraintBottom_toBottomOf="@id/title_sensorNum"/>

</androidx.constraintlayout.widget.ConstraintLayout>