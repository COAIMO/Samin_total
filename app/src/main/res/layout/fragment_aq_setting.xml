<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AqSettingFragment">

    <TextView
        android:id="@+id/boardmenu_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="AQ보드 내역"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="@id/scrollView" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/search_btn"
        style="@style/cancelButton"
        android:layout_marginBottom="20dp"
        android:text="조회"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="@id/scrollView"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="500dp"
        android:layout_height="480dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/container_border"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/boardRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
<!--            child view margin top 10dp 씩 줄것-->


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardsetting_container"
        android:layout_width="500dp"
        android:layout_height="480dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/container_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/boardsetting_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="AQ보드 설정"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/boardsetting_container"
        app:layout_constraintStart_toStartOf="@id/boardsetting_container" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        style="@style/saveButton"
        android:layout_marginBottom="20dp"
        android:text="저장"
        app:layout_constraintBottom_toTopOf="@id/boardsetting_container"
        app:layout_constraintEnd_toEndOf="@id/boardsetting_container"
        app:layout_constraintHorizontal_chainStyle="packed" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/labsislogo_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
